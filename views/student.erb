<!DOCTYPE html>
<html>
  <head>
    <title>New Student</title>
  </head>
  <body>
    <h1>Student</h1>
    <div class="student">
      <h3>Name: <%= @student.name %></h3>
      <h4>Grade: <%= @student.grade %></h4>
    </div><br>

    <h1>Courses</h1>
    <% @courses.each do |course| %>
      <div class="course">
        <p>Course Name: <%= course.name %></p><br>
        <p>Course Topic: <%= course.topic %></p><br>
      </div><br>
    <% end %>
  </body>
</html>
